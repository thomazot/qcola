.newsletter 
    container: viewport 
    margin: (gutter) auto

    &__container 
        padding: (gutter) 0 
        border-top: solid 1px rgba(0,0,0,.1)
        border-bottom: solid 1px rgba(0,0,0,.1)

    &__header 
        text-align: center
        margin-bottom: (gutter / 2)

    &__title 
        font-size: 22px
        font-weight: bold 
        line-height: 1.2

        span 
            display: block
            font-size: 26px

    &__form 
        margin: -5px

    &__box, &__actions
        padding: 5px 

    &__description 
        font-size: 14px

    &__input, &__button
        width: 100% 

    &__button 
        padding: 0 (gutter / 2)

    &--footer 
        margin-bottom: 0
        .newsletter 
            &__container 
                padding: 0
                border: 0

            &__title
                font-size: 18px
                font-weight: bold 
                letter-spacing: 2px

            &__description 
                color: #8C8C8C

            &__input 
                border-radius: 4px
                box-shadow: 0 0 10px rgba(0,0,0,.5)
                color: #333

            &__button
                border-radius: 4px
                font-size: 14px
                font-weight: regular 
                text-transform: uppercase 
                letter-spacing: 2px
    &--custom 
        border-radius: 6px
        padding: 30px 

        .newsletter 
            &__container 
                border: 0 
                padding: 0

            &__title 
                font-size: 28px
                font-weight: bold 
                letter-spacing: 1px
                color: #fff

                max-width: 454px

            &__input 
                height: 42px
                background: none 
                border: 0

            &__box 
                flex: 1 
                min-width: 0

            &__form
                display: flex 
                background: #fff 
                border-radius: 6px

            &__actions 
                flex: 0 0 155px

            &__button
                height: 42px
                background: none 
                font-size: 16px
                font-weight: bold 
                text-transform: uppercase 
                letter-spacing: 2px

@media (min-width: 768px)
    .newsletter
        &__form
            display: flex 
            justify-content: center
            align-items: center

        &__box
            flex: 1
            min-width: 0

@media (min-width: 992px)
    .newsletter 
        &__container 
            display: flex 
            justify-content: space-between
            align-items: center
        
        &__header 
            display: flex 
            justify-content: space-between
            align-items: center
            margin: 0 -(gutter / 2)
            text-align: left
            
        &__title, &__description, &__box, &__actions
            padding: (gutter / 2)

        &__main 
            flex: 1
            min-width: 0
            margin-left: gutter

        &--footer
            .newsletter 
                &__header 
                    display: block
                    margin: 0
                &__title, &__description
                    padding: 0

        

    

    